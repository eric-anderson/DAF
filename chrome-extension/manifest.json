{
  "manifest_version": 2,

  "name": "Diggy friend list automation",
  "version": "0.1",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "debugger",
    "tabs",
    "https://*.diggysadventure.com/*",
    "https://*.facebook.com/*",
    "https://*.fbcdn.net/*"
  ],
  "browser_action": {
    "default_title": "Diggy friend list automation"
  },
  "web_accessible_resources": ["inject-friends.js", "ui.html", "ui.js"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://apps.facebook.com/*", "https://*.pixelfederation.com/*", "https://*.diggysadventure.com/*"],
      "js": ["hack_content.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://www.facebook.com/*", "https://m.facebook.com/*"],
      "js": ["hack_content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
   ]
}
